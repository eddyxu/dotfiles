# vim:ft=sh
# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh

# Set name of the theme to load.
# Look in ~/.oh-my-zsh/themes/
# Optionally, if you set this to "random", it'll load a random theme each
# time that oh-my-zsh is loaded.
ZSH_THEME="gentoo"
#ZSH_THEME="agnoster"
#ZSH_THEME="muse"

# Set to this to use case-sensitive completion
# CASE_SENSITIVE="true"

# Comment this out to disable bi-weekly auto-update checks
# DISABLE_AUTO_UPDATE="true"

# Uncomment to change how many often would you like to wait before auto-updates occur? (in days)
# export UPDATE_ZSH_DAYS=13

# Uncomment following line if you want red dots to be displayed while waiting for completion
# COMPLETION_WAITING_DOTS="true"

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
plugins=(git git-extras brew macos pip debian command-not-found golang docker docker-compose aws)

if [ -d /usr/local/share/zsh-completions ]; then
  fpath=(/usr/local/share/zsh-completions $fpath)
fi

source $ZSH/oh-my-zsh.sh

if [[ -s '/etc/zsh_command_not_found' ]]; then
	source '/etc/zsh_command_not_found'
fi

# Customize to your needs...
OS=`uname`
export EDITOR=nvim

if [ -d $HOME/work/go ]; then
	export GOPATH=$HOME/work/go
	PATH=$PATH:$HOME/work/go/bin
fi

export PATH=/opt/homebrew/bin:$PATH:/usr/local/go/bin:/snap/bin:~/.cargo/bin:~/bin:~/.local/bin


if [ -d /usr/local/Cellar/git ]; then
	export PATH=$PATH:`cd /usr/local/Cellar/git/*/share/git-core/contrib/workdir; pwd`
elif [ -d /usr/share/doc/git/contrib/workdir/ ]; then
  export PATH=$PATH:/usr/share/doc/git/contrib/workdir/
fi

if [ -f /usr/local/bin/virtualenvwrapper.sh ]; then
  . /usr/local/bin/virtualenvwrapper.sh
fi

alias vim=nvim
alias vi=nvim

export FZF_DEFAULT_COMMAND='fd --type f --exclude .git --exclude vender --exclude node_modules'
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

export PATH="/opt/homebrew/opt/openjdk@11/bin:$PATH"
export JAVA_HOME=`/usr/libexec/java_home`
complete -C '/opt/homebrew/bin/aws_completer' aws


export DYLD_FALLBACK_LIBRARY_PATH="$(xcode-select --print-path)/usr/lib/"

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/Users/lei/miniconda3/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/Users/lei/miniconda3/etc/profile.d/conda.sh" ]; then
        . "/Users/lei/miniconda3/etc/profile.d/conda.sh"
    else
        export PATH="/Users/lei/miniconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<


export PATH="$HOME/.poetry/bin:$PATH"

export MKL_DEBUG_CPU_TYPE=5

complete -C '/usr/local/bin/aws_completer' aws

